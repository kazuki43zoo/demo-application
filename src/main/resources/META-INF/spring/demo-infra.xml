<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mybatis="http://mybatis.org/schema/mybatis-spring"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://mybatis.org/schema/mybatis-spring http://mybatis.org/schema/mybatis-spring.xsd
        ">

    <import resource="classpath:META-INF/spring/demo-env.xml"/>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate"
          p:dataSource-ref="dataSource"
          p:fetchSize="100"/>

    <bean id="jdbcOperations" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate"
          c:classicJdbcTemplate-ref="jdbcTemplate"/>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean"
          p:dataSource-ref="dataSource"
          p:configLocation="classpath:/META-INF/mybatis/mybatis-config.xml"/>

    <mybatis:scan
            base-package="com.github.kazuki43zoo.domain.repository"
            template-ref="sqlSessionTemplateForBatch"
            name-generator="com.github.kazuki43zoo.infra.mybatis.spring.BatchModeRepositoryBeanNameGenerator"/>

    <bean id="sqlSessionTemplateForBatch" class="org.mybatis.spring.SqlSessionTemplate" destroy-method="getExecutorType"
          c:sqlSessionFactory-ref="sqlSessionFactory"
          c:executorType="BATCH"/>

    <mybatis:scan base-package="com.github.kazuki43zoo.domain.repository"/>

</beans>
